<% layout("/layout/boilerplate.ejs") %> 
    <h1 class="mt-3">All Listings</h1>
    <br>
    <!-- <form method="get" action="/listings/new">
        <button type="submit">Create new Listing</button>
    </form> -->

    
 <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allLists) { %>
        <a href="/listings/<%=listing._id%>" style="text-decoration: none;">
    <div class="card col homecard">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="Listing_image" style="height: 20rem;"  />
  <div class="card-body">
    <h5 class="card-text"><%=listing.title%></h5>
    <p class="card-text"><%=listing.location%></p>
    <p class="card-text" style="font-weight: bold;">&#8377;<%=listing.price.toLocaleString("en-In")%>/night</p>
        </div>
    </div>
    </a>
  <% } %>
</div>
</html>